<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Syllabus</display-name>
  <context-param>
    <param-name>primefaces.THEME</param-name>
    <param-value>cupertino</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.PROJECT_STAGE</param-name>
    <param-value>Development</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
    <param-value>server</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.DEFAULT_SUFFIX</param-name>
    <param-value>.xhtml</param-value>
  </context-param>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.jsf</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <exception-type>javax.faces.application.ViewExpiredException</exception-type>
    <location>/error/sessionExpired.jsp</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/error/401.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/error/403.jsp</location>
  </error-page>
  <security-constraint>
    <display-name>Protegido</display-name>
    <web-resource-collection>
      <web-resource-name>Protegido</web-resource-name>
      <description></description>
      <url-pattern>/paginas/index.jsf</url-pattern>
      <url-pattern>/paginas/ficha/*</url-pattern>
      <url-pattern>/paginas/parametros/*</url-pattern>
      <url-pattern>/paginas/personas/*</url-pattern>
      <url-pattern>/paginas/usuarios/*</url-pattern>
      <url-pattern>/paginas/instituciones/*</url-pattern>
      <url-pattern>/paginas/actividadEconomica/*</url-pattern>
      <url-pattern>/paginas/condicionesPerjudiciales/*</url-pattern>
      <url-pattern>/paginas/accionesViolentas/*</url-pattern>
      <url-pattern>/paginas/tareasPeligrosas/*</url-pattern>
      <url-pattern>/paginas/pais/*</url-pattern>
      <url-pattern>/reportes/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      <http-method>HEAD</http-method>
      <http-method>PUT</http-method>
      <http-method>OPTIONS</http-method>
      <http-method>TRACE</http-method>
      <http-method>DELETE</http-method>
    </web-resource-collection>
    <auth-constraint>
      <description></description>
      <role-name>ADMINISTRADOR</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>syllabus-realm</realm-name>
    <form-login-config>
      <form-login-page>/paginas/login.html</form-login-page>
      <form-error-page>/paginas/error.html</form-error-page>
    </form-login-config>
  </login-config>
  <security-role>
    <description></description>
    <role-name>ADMINISTRADOR</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>PROFESOR</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>ALUMNO</role-name>
  </security-role>
</web-app>